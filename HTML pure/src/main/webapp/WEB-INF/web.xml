<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://127.0.0.1:3306/tiw</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>leonardo</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>password</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>

    <filter>
        <filter-name>CheckLoggedUser</filter-name>
        <filter-class>it.polimi.tiw.filters.CheckLoggedUser</filter-class>
    </filter>
    <filter>
        <filter-name>CheckNotLoggedUser</filter-name>
        <filter-class>it.polimi.tiw.filters.CheckNotLoggedUser</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CheckLoggedUser</filter-name>
        <url-pattern>/GoToHome</url-pattern>
        <url-pattern>/GoToUserList</url-pattern>
        <url-pattern>/CheckInvitation</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckNotLoggedUser</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/GoToLoginPage</url-pattern>
        <url-pattern>/CheckLogin</url-pattern>
        <url-pattern>/GoToRegisterPage</url-pattern>
        <url-pattern>/CheckRegistration</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>